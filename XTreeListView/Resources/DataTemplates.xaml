<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:resources="clr-namespace:XTreeListView.Resources">

    <!-- Group Item default content template. -->
    <DataTemplate x:Key="GroupItemDefaultDataTemplate">
        <TextBlock Text="{Binding DisplayString}" />
    </DataTemplate>

    <!-- Cell bind to source data template. -->
    <DataTemplate x:Key="{x:Static resources:All.BindToSourceCellDataTemplateKey}">
        <TextBlock Text="{Binding BindsDirectlyToSource=True}" />
    </DataTemplate>

</ResourceDictionary>
