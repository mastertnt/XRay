<UserControl x:Class="XTreeListView.TestApp.Gui.Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xtlv="http://schemas.xray.com/wpf/xaml/xtreelistview"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TabControl>
            <TabItem Header="Person">
                <xtlv:TreeListView x:Name="mPersonContainer" x:FieldModifier="private" DefaultMessage="Click on the Load Model button." Margin="3" />
            </TabItem>
            <TabItem Header="Multi Column">
                <xtlv:TreeListView x:Name="mMultiContainer" x:FieldModifier="private" Margin="3" />
            </TabItem>
        </TabControl>            
    </Grid>
</UserControl>
