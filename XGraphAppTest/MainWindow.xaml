<Window x:Class="XGraphTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:XGraph.Controls;assembly=XGraph"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type controls:NodeView}" BasedOn="{StaticResource {x:Type controls:NodeView}}">
                <Setter Property="Background" Value="Purple" />
            </Style>
            <CollectionViewSource x:Key="NodesBridge" Source="{Binding Path=Nodes}" />
            <CollectionViewSource x:Key="NodesBridge" Source="{Binding Path=Connections}" />
        </Grid.Resources>
        <controls:GraphView x:Name="GraphNode">
            <controls:GraphView.ItemsSource>
                <CompositeCollection>
                    <CollectionContainer Collection="{Binding Nodes}"/>
                    <CollectionContainer Collection="{Binding Connections}"/>
                </CompositeCollection>
            </controls:GraphView.ItemsSource>
        </controls:GraphView>
    </Grid>
</Window>
